{
  "name": "homebridge-esphome-garagedoor",
  "version": "2.1.0",
  "description": "Homebridge plugin to map garage door with a Shelly1 and ESPHome",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn clean && yarn build:ts",
    "test": "jest --forceExit --coverage --verbose",
    "watch:test": "yarn run test -- --watchAll",
    "build:ts": "tsc",
    "lint": "tsc --noEmit && eslint \"src/*.{js,ts}\" --quiet --fix",
    "prettier": "prettier --single-quote --trailing-comma es5 --write \"{src,__{tests,mocks}__}/**/*.ts\"",
    "clean": "rimraf dist/",
    "watch": "concurrently -k -p \"[{name}]\" \"yarn watch:ts\" \"yarn watch:node\"",
    "watch:ts": "tsc -w",
    "watch:node": "ts-nodemon --exec \"yarn serve\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "engines": {
    "homebridge": ">=1.1.0",
    "node": ">=12.13.0"
  },
  "repository": "https://github.com/madchicken/homebridge-esphome-garagedoor",
  "author": "Pierpaolo Follia <pfollia@gmail.com>",
  "license": "MIT",
  "private": false,
  "keywords": [
    "homebridge-plugin",
    "homebridge",
    "esphome",
    "shelly"
  ],
  "dependencies": {
    "eventsource": "^1.1.2",
    "lodash": "^4.17.21",
    "node-fetch": "^2.7.0",
    "homebridge": "^1.7.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.2",
    "@eslint/js": "^9.0.0",
    "@trongnd/ts-nodemon": "^1.0.3",
    "@types/async-retry": "^1.4.2",
    "@types/eventsource": "^1.1.5",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.167",
    "@types/node": "^11.15.3",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^2.14.0",
    "concurrently": "^5.3.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "globals": "^15.0.0",
    "homebridge": "^1.7.0",
    "husky": "^4.3.6",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "*",
    "typescript-eslint": "^7.6.0"
  },
  "files": [
    "dist",
    "config.schema.json",
    "package.json"
  ]
}
